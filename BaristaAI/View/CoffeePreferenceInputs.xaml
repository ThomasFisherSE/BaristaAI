<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaristaAI.View.CoffeePreferenceInputs">
    <ContentView.Content>
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Brewing Methods: "
                       FontSize="18" />

                <HorizontalStackLayout>
                    <Button Text="Espresso Machine" />
                    <Button Text="French Press" />
                    <Button Text="AeroPress" />
                    <Button Text="Custom" />
                </HorizontalStackLayout>
                
            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <Label Text="Taste Preferences: "
                       FontSize="18" />

                <HorizontalStackLayout>
                    <Button Text="Chocolatey" />
                    <Button Text="Nutty" />
                    <Button Text="Fruity" />
                    <Button Text="Floral" />
                    <Button Text="Spicy" />
                    <Button Text="Custom" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>