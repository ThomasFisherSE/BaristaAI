<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaristaAI.View.CoffeePreferenceInputs">
    <ContentView.Content>
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Brewing Type (e.g. Espresso Machine? French Press? Filter?): "
                       FontSize="18" />

                <Entry x:Name="BrewingTypeEntry"
                       Placeholder="Type here..." />
            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <Label Text="Taste Preferences (e.g. Chocolatey? Acidic?): "
                       FontSize="18" />

                <Entry x:Name="TastePreferencesEntry"
                       Placeholder="Type here..." />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>